<h1>Goblin Dash 儀式感後台</h1>
<a href="/dash/new">新增文章</a>
<ul>
  <% posts.forEach(post => { %>
    <li>
      <strong><%= post.title %></strong>
      <a href="/dash/edit/<%= post.id %>">編輯</a>
      <form action="/dash/delete/<%= post.id %>" method="POST" style="display:inline;">
        <button type="submit">刪除</button>
      </form>
    </li>
  <% }) %>
</ul>
